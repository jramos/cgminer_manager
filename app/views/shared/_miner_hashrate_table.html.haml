- @bad_chain_elements ||= []

%table(cellpadding="0" cellspacing="0")
  %thead
    %th Host
    %th Rate(5s)
    %th Rate(avg)
  %tbody
    - summary = @miner_data[miner_index][:summary].first[:summary].try(:first) || {}
    %tr
      %td= miner.host + ':' + miner.port.to_s
      %td.text-center= format_hashrate((summary[:ghs_5s].to_f * 1e9 rescue 0))
      %td.text-center= format_hashrate((summary[:ghs_av].to_f * 1e9 rescue 0))