#general
  - uptime          = @summary[:uptime].sum
  - up_since        = Time.now - uptime
  - miner_available = @miner_pool.miners.select{|miner| miner.available? }.count
  - miner_total     = @miner_pool.miners.count
  - total_processed = @summary[:total_mh].sum * 1e3

  .text-center
    %table
      %tr
        %td Pool size
        %td
          - if miner_available == miner_total
            .green.bold= "#{miner_available}/#{miner_total} available"
          - else
            .red.bold= "#{miner_available}/#{miner_total} available"
      %tr
        %td Total processing time
        - if uptime > 0
          %td= time_ago_in_words(up_since)
        - else
          %td= uptime.to_s + ' sec'
      %tr
        %td Total processed
        %td= format_hashrate(total_processed).sub('/s', '')