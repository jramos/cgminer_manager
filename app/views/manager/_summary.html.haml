#summary
  #total-ghs
    %h3 Local Rate
    - avg_ghs_5s = @summary[:ghs_5s].sum / @summary[:ghs_5s].count
    - avg_ghs_avg = @summary[:ghs_avg].sum / @summary[:ghs_avg].count

    %table(cellpadding="0" cellspacing="0")
      %tbody
        %thead
          %th
          %th Global
          %th Avg
        %tr
          %td 5s
          %td.text-center= formatHashrate(@summary[:ghs_5s].sum * 1e9 )
          %td.average-ghs= formatHashrate(avg_ghs_5s * 1e9)
        %tr
          %td Avg
          %td.text-center= formatHashrate(@summary[:ghs_avg].sum * 1e9)
          %td.average-ghs= formatHashrate(avg_ghs_avg * 1e9)

  #temperature
    %h3 Temperature
    %table(cellpadding="0" cellspacing="0")
      %tbody
        %thead
          %th
          %th C
          %th F
        %tr
          %td Range
          %td.text-center
            = raw(@summary[:temperature].min.round(1).to_s + ' - ' + @summary[:temperature].max.round(1).to_s + '&deg;')
          %td.text-center
            = raw(toF(@summary[:temperature].min).to_s + ' - ' + toF(@summary[:temperature].max).to_s + '&deg;')
        %tr
          %td Avg
          %td.text-center
            = raw((@summary[:temperature].sum / @summary[:temperature].count).round(1).to_s + '&deg;')
          %td.text-center
            = raw(toF(@summary[:temperature].sum / @summary[:temperature].count).to_s + '&deg;')

  .clear

  #rejected-rate
    - avg_rejected_pct = @summary[:rejected_rate].sum / @summary[:rejected_rate].count
    - avg_rejected_rate = avg_rejected_pct / 100
  
    %h3 Rejected Rate - #{avg_rejected_pct.round(2)}% avg

    %table(cellpadding="0" cellspacing="0")
      %tbody
        %thead
          %th
          %th Global
          %th Avg
        %tr
          %td 5s
          %td.text-center= formatHashrate(avg_rejected_rate * @summary[:ghs_5s].sum * 1e9)
          %td.average-ghs= formatHashrate(avg_rejected_rate * @summary[:ghs_5s].sum * 1e9 / @summary[:rejected_rate].count)
        %tr
          %td Avg
          %td.text-center= formatHashrate(avg_rejected_rate * @summary[:ghs_avg].sum * 1e9)
          %td.average-ghs= formatHashrate(avg_rejected_rate * @summary[:ghs_avg].sum * 1e9 / @summary[:rejected_rate].count)    

  #error-rate
    - avg_error_pct = @summary[:error_rate].sum / @summary[:error_rate].count
    - avg_error_rate = avg_error_pct / 100

    %h3 Error Rate - #{avg_error_pct.round(2)}% avg

    %table(cellpadding="0" cellspacing="0")
      %tbody
        %thead
          %th
          %th Global
          %th Avg
        %tr
          %td 5s
          %td.text-center= formatHashrate(avg_error_rate * @summary[:ghs_5s].sum * 1e9)
          %td.average-ghs= formatHashrate(avg_error_rate * @summary[:ghs_5s].sum * 1e9 / @summary[:error_rate].count)
        %tr
          %td Avg
          %td.text-center= formatHashrate(avg_error_rate * @summary[:ghs_avg].sum * 1e9)
          %td.average-ghs= formatHashrate(avg_error_rate * @summary[:ghs_avg].sum * 1e9 / @summary[:error_rate].count)

  .clear